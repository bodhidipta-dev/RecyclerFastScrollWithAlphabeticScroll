<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bodhi.llc.recyclerfastscrollwithalphabeticscroll.MainActivity">

    <com.bodhi.llc.recyclerfastscrollwithalphabeticscroll.CircleView
        android:id="@+id/circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/plus_zoom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:background="#333333"
        android:gravity="center"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/minus_zoom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="#333333"
        android:gravity="center"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
        android:id="@+id/demo_list"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        app:fastScrollAutoHide="false"
        app:fastScrollPopupBackgroundSize="88dp"
        app:fastScrollPopupBgColor="@color/colorAccent"
        app:fastScrollPopupPosition="center"
        app:fastScrollPopupTextColor="@android:color/primary_text_dark"
        app:fastScrollPopupTextSize="56sp"
        app:fastScrollThumbColor="@color/colorAccent"
        app:fastScrollTrackColor="#1f000000" />


</RelativeLayout>
